    position: relative;
    overflow: hidden;
    cursor: pointer;
    box-shadow: 0 2px 12px rgba(103, 80, 164, 0.08);
    display: flex;
    flex-direction: column;
    min-height: 280px;
}

.employee-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #6750a4, #7c4dff, #9c88ff);
    opacity: 0;
    transition: opacity 0.3s ease;
}

.employee-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 32px rgba(103, 80, 164, 0.2);
    border-color: #6750a4;
}

.employee-card:hover::before {
    opacity: 1;
}

.employee-card.expanded {
    min-height: auto;
    background: linear-gradient(135deg, #f8f4ff 0%, #ede7f6 100%);
    border-color: #6750a4;
    box-shadow: 0 8px 32px rgba(103, 80, 164, 0.25);
    transform: scale(1.02);
    cursor: default;
}

.employee-card.expanded::before {
    opacity: 1;
    height: 6px;
}

/* –ê–≤–∞—Ç–∞—Ä —Å–æ—Ç—Ä—É–¥–Ω–∏–∫–∞ - –ö–†–ê–°–ò–í–´–ô */
.employee-avatar {
    width: 64px;
    height: 64px;
    border-radius: 20px;
    background: linear-gradient(135deg, #6750a4 0%, #7c4dff 50%, #9c88ff 100%);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.25rem;
    margin: 0 auto 16px auto;
    box-shadow: 0 4px 20px rgba(103, 80, 164, 0.4);
    position: relative;
    overflow: hidden;
}

.employee-avatar::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, transparent, rgba(255,255,255,0.2), transparent);
    transform: rotate(45deg);
    animation: shine 3s infinite;
}

@keyframes shine {
    0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
    50% { transform: translateX(100%) translateY(100%) rotate(45deg); }
    100% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
}

/* –ò–º—è —Å–æ—Ç—Ä—É–¥–Ω–∏–∫–∞ - –ö–†–ê–°–ò–í–û–ï */
.employee-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: #2d1b69;
    text-align: center;
    margin-bottom: 20px;
    line-height: 1.3;
    background: linear-gradient(135deg, #2d1b69, #6750a4);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

/* –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ —Å–æ—Ç—Ä—É–¥–Ω–∏–∫–µ - –ö–†–ê–°–ò–í–ê–Ø */
.employee-info {
    margin-bottom: 16px;
    flex: 1;
}

/* –ü–æ–ª–µ —Å–æ—Ç—Ä—É–¥–Ω–∏–∫–∞ - –ë–ï–ô–î–ñ –°–¢–ò–õ–¨ */
.employee-field {
    background: rgba(103, 80, 164, 0.08);
    border-radius: 12px;
    padding: 12px 16px;
    margin-bottom: 8px;
    border-left: 3px solid #6750a4;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.employee-field:hover {
    background: rgba(103, 80, 164, 0.12);
    transform: translateX(4px);
    box-shadow: 0 2px 8px rgba(103, 80, 164, 0.15);
}

.employee-card.expanded .employee-field {
    background: rgba(103, 80, 164, 0.12);
}

/* –ü–µ—Ä–µ–¥–µ–ª—ã–≤–∞–µ–º —Å—Ç—Ä—É–∫—Ç—É—Ä—É –ø–æ–ª—è */
.employee-field {
    display: block; /* –í–º–µ—Å—Ç–æ flex */
}

.field-label {
    font-weight: 600;
    color: #6750a4;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 4px;
    display: block;
}

.field-value {
    color: #2d1b69;
    font-size: 0.9rem;
    font-weight: 500;
    word-break: break-word;
    overflow-wrap: anywhere;
    line-height: 1.4;
    display: block;
}

.field-value.hidden {
    background: linear-gradient(135deg, #79747e, #5f5b61);
    color: white;
    border-radius: 8px;
    padding: 8px 12px;
    cursor: pointer;
    user-select: none;
    font-family: monospace;
    font-size: 0.85rem;
    font-weight: 600;
    text-align: center;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    margin-top: 4px;
}

.field-value.hidden::before {
    content: 'üîí –ù–∞–∂–º–∏—Ç–µ —á—Ç–æ–±—ã –ø–æ–∫–∞–∑–∞—Ç—å';
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 0.75rem;
    font-weight: 500;
    display: block;
    margin-bottom: 2px;
}

.field-value.hidden:hover {
    background: linear-gradient(135deg, #5f5b61, #4a4548);
    transform: scale(1.02);
    box-shadow: 0 2px 8px rgba(0,0,0,0.2);
}

.field-value.hidden.revealed {
    background: transparent;
    color: #2d1b69;
    cursor: default;
    padding: 0;
    font-family: inherit;
    font-size: 0.9rem;
    text-align: left;
    font-weight: 500;
}

.field-value.hidden.revealed::before {
    display: none;
}

.field-value.hidden.revealed::after {
    content: ' üëÅÔ∏è';
    color: #6750a4;
    cursor: pointer;
    margin-left: 8px;
    font-size: 0.8rem;
    opacity: 0.7;
    transition: opacity 0.2s;
}

.field-value.hidden.revealed:hover::after {
    opacity: 1;
}

/* –ö–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π —Å–æ—Ç—Ä—É–¥–Ω–∏–∫–∞ - –ö–†–ê–°–ò–í–´–ô */
.employee-comment {
    background: linear-gradient(135deg, #f8f4ff 0%, #ede7f6 100%);
    border: 2px solid rgba(103, 80, 164, 0.2);
    border-radius: 16px;
    padding: 16px 20px;
    margin-bottom: 16px;
    font-size: 0.9rem;
    color: #2d1b69;
    line-height: 1.5;
    font-style: italic;
    position: relative;
    box-shadow: 0 2px 8px rgba(103, 80, 164, 0.1);
}

.employee-comment::before {
    content: '‚Äú';
    font-size: 2rem;
    color: #6750a4;
    position: absolute;
    top: -5px;
    left: 10px;
    opacity: 0.3;
    font-family: Georgia, serif;
}

.employee-comment.long {
    max-height: 80px;
    overflow: hidden;
    transition: all 0.3s ease;
}

.employee-card.expanded .employee-comment {
    max-height: none;
    overflow: visible;
}

/* –î–∞—Ç—ã - –ö–†–ê–°–ò–í–´–ï */
.employee-dates {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.75rem;
    color: #6750a4;
    padding: 12px 16px;
    background: rgba(103, 80, 164, 0.05);
